  style(type='text/css')
    body {
        padding-top: 60px;
        padding-bottom: 40px;
    }

        /* Landscape phones and down */
    @media only screen and (max-width: 480px) {
        body {
            font-size: 85%;
        }

        h1 {
            font-size: 22pt;
        }

        h2 {
            font-size: 20pt;
        }

        h3 {
            font-size: 18pt;
        }

        .topsocial {
            min-height: 65px;
            text-align: center;
        }

        .social {
            float: left;
            margin-right: 15px;
        }

        .social:first-child {
            margin-right: 15px;
        }

        .social:last-child {
            margin-right: 0px;
        }
    }

        /* Smartphones (portrait and landscape) ----------- */
    @media only screen
    and (min-device-width : 320px)
    and (max-device-width : 480px) {
        body {
            font-size: 85%;
        }

        h1 {
            font-size: 22pt;
        }

        h2 {
