head
  title #{page.title} - #{locals.title}
  meta(http-equiv="content-type", content='width=device-width, initial-scale=1.0, charset=utf-8')
  link(rel='stylesheet', href= '#{locals.baseUrl}' + '/assets/css/github.css')
  link(rel='stylesheet', href= '#{locals.baseUrl}' + '/assets/bootstrap/css/bootstrap.min.css')
  link(rel='stylesheet', href= '#{locals.baseUrl}' + '/assets/bootstrap/css/bootstrap-responsive.min.css')
  link(rel='stylesheet', href= '#{locals.baseUrl}' + '/assets/css/prettify.css')
  link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Noto+Serif')
  link(rel='stylesheet', href= '#{locals.baseUrl}' + '/assets/css/app.css')
  style(type='text/css')
      body { padding-top: 60px; padding-bottom: 40px; }

      h1 {
          font-size: 23pt;
      }

      h2 {
          font-size: 20pt;
      }

      h3 {
          font-size: 18pt;
      }

      /* Large desktop */
      @media (min-width: 1200px) {
          body { font-size:100%;}
          h1 {
              font-size: 23pt;
          }
          h2 {
              font-size: 20pt;
          }
          h3 {
              font-size: 18pt;
          }
      }

      @media (max-width: 980px) {
         body {
            padding-top: 0px;
         }
          h1 {
              font-size: 20pt;
          }
          h2 {
              font-size: 18pt;
          }
          h3 {
              font-size: 16pt;
          }
      }

      /* Portrait tablet to landscape and desktop */
      @media (min-width: 768px) and (max-width: 979px) {
          body { font-size:95%;}
          h1 {
            font-size: 20pt;
          }
          h2 {
            font-size: 18pt;
          }
          h3 {
            font-size: 16pt;
          }
      }

      /* Landscape phone to portrait tablet */
      @media (max-width: 767px) {
          body { font-size:90%;}
          h1 {
            font-size: 18pt;
          }
          h2 {
            font-size: 16pt;
          }
          h3 {
            font-size: 14pt;
          }
      }

      /* Landscape phones and down */
      @media only screen and (max-width: 480px) {
          body { font-size:85%;}
          h1 {
            font-size: 16pt;
          }
          h2 {
            font-size: 14pt;
          }
          h3 {
            font-size: 12pt;
          }
      }
